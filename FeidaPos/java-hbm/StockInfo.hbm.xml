<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping 
	package="org.hibernate.auction">

	<class name="com.orion.StockInfo" table="StockInfo">
		<id name="sid" type="java.lang.String"></id>
		<property name="pid" not-null="true" length="20" column="`pid`"/>	
		<property name="sdate" not-null="true" column="`sdate`"/>
		<property name="stotalprice" not-null="true" column="`stotalprice`"/>
		<property name="sbuyer" not-null="true" length="50" column="`sbuyer`"/>	
	</class>
</hibernate-mapping>