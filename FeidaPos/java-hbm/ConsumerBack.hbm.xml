<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hibernate.auction">

	<class name="com.orion.ConsumerBack" table="ConsumerBack">    <!-- 指定类和表之间的映射 -->
		<id name="cbid" type="java.lang.String"></id>
		<property name="cid" not-null="true" length="20" column="`cid`"/>	
		<property name="eid" not-null="true" length="20" column="`eid`"/>	
		<property name="cbdate" not-null="true" column="`cbdate`"/>
	</class>
</hibernate-mapping>