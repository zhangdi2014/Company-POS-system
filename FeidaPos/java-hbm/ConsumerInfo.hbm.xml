<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping 
	package="org.hibernate.auction">

	<class name="com.orion.ConsumerInfo" table="ConsumerInfo">
		<id name="cid" type="java.lang.String"></id>
		<property name="cname" not-null="true" length="50" column="`cname`"/>	
		<property name="clinkman" not-null="true" length="50" column="`clinkman`"/>
		<property name="caddress" not-null="true" length="50" column="`caddress`"/>
		<property name="ctel" not-null="true" length="20" column="`ctel`"/>
		<property name="cemail" not-null="true" length="50" column="`cemail`"/>
		<property name="cremark" not-null="true" length="200" column="`cremark`"/>
	</class>
</hibernate-mapping>